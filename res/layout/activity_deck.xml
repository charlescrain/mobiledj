<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" 
    android:splitMotionEvents="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile DJ"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="219dp"
        android:layout_weight="0.23" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/Mix_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mix" />

            <Button
                android:id="@+id/Save_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save" />

            <Button
                android:id="@+id/Playback_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Playback" />

            <Button
                android:id="@+id/Effects_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Effects" />

            <ToggleButton
                android:id="@+id/Effects_onoff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Effects" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.68" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ToggleButton
                android:id="@+id/Loops_onoff1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loop" />

            <ToggleButton
                android:id="@+id/Effects_onoff1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Effects" />

            <Button
                android:id="@+id/Record_button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Record" />

            <Button
                android:id="@+id/Play_button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Play" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ToggleButton
                android:id="@+id/Loops_onoff2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loop" />

            <ToggleButton
                android:id="@+id/Effects_onoff2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Effects" />

            <Button
                android:id="@+id/Record_button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Record" />

            <Button
                android:id="@+id/Play_button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Play" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ToggleButton
                android:id="@+id/Loops_onoff3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loop" />

            <ToggleButton
                android:id="@+id/Effects_onoff3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Effects" />

            <Button
                android:id="@+id/Record_button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Record" />

            <Button
                android:id="@+id/Play_button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Play" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ToggleButton
                android:id="@+id/Loops_onoff4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loop" />

            <ToggleButton
                android:id="@+id/Effects_onoff4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Effects" />

            <Button
                android:id="@+id/Record_button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Record" />

            <Button
                android:id="@+id/Play_button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Play" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>